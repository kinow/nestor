<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Nestor QA - Test Management">
    <meta name="author" content="Nestor QA">

    <!-- Le styles -->
    <link href="{{ twiggy_theme_url('css/bootstrap.css') }}" rel="stylesheet">
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>
    <link href="{{ twiggy_theme_url('css/bootstrap-responsive.css') }}" rel="stylesheet">
    <link href="{{ twiggy_theme_url('css/sitemapstyler.css') }}" rel="stylesheet">
    <link href="{{ twiggy_theme_url('css/style.css') }}" rel="stylesheet">

    <!-- Le jQuery and bootstrap JS -->
    <script src="{{ twiggy_theme_url('js/jquery-1.10.1.js') }}"></script>
    <script src="{{ twiggy_theme_url('js/bootstrap.min.js') }}"></script>
    <script src="{{ twiggy_theme_url('js/bootstrap-alert.js') }}"></script>
    <script src="{{ twiggy_theme_url('js/sitemapstyler.js') }}"></script>
    <script src="{{ twiggy_theme_url('js/script.js') }}"></script>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

  </head>

  <body>
    {{ bootstrap_menus(active|default('home'), projects|default([]), project) }}
    <div class="container">

      <!-- Example row of columns -->
      <div class="row">
      	<div class="span12">
      	  {# display messages #}
		  {{ bootstrap_messages(array_merge(message|default([]))) }}

		  {% block content %}
      	  {% endblock content %}
		</div>
	  </div>

      <hr>

      <footer class='text-right'>
        <p>Page rendered in <strong>{{ elapsed_time }}</strong> seconds <a href="http://www.nestor-qa.org">Nestor ver. {{ nestor_version() }}</a></p>
      </footer>

    </div> <!-- /container -->

  </body>
</html>
