<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Nestor QA - Test Management">
    <meta name="author" content="Nestor QA">

    <!-- Le styles -->
    <link href="{{ twiggy_theme_url('css/bootstrap.css') }}" rel="stylesheet">
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>
    <link href="{{ twiggy_theme_url('css/bootstrap-responsive.css') }}" rel="stylesheet" />
    <link href="{{ twiggy_theme_url('css/plugins/fancytree/skin-lion/ui.fancytree.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ twiggy_theme_url('css/style.css') }}" rel="stylesheet" />

    <!-- Le jQuery and bootstrap JS -->
    <script src="{{ twiggy_theme_url('js/jquery-2.0.3.min.js') }}"></script>
    <script src="{{ twiggy_theme_url('js/plugins/jquery.cookie.js') }}"></script>
    <script src="{{ twiggy_theme_url('js/plugins/jqueryui/jqueryui.custom.js') }}"></script>
    <script src="{{ twiggy_theme_url('js/plugins/fancytree/jquery.fancytree.min.js') }}" type="text/javascript"></script>
    <script src="{{ twiggy_theme_url('js/plugins/fancytree/extensions/jquery.fancytree.childcounter.js') }}" type="text/javascript"></script>
    <script src="{{ twiggy_theme_url('js/plugins/fancytree/extensions/jquery.fancytree.persist.js') }}" type="text/javascript"></script>
    <script src="{{ twiggy_theme_url('js/bootstrap.min.js') }}"></script>
    <script src="{{ twiggy_theme_url('js/bootstrap-alert.js') }}"></script>
    <script src="{{ twiggy_theme_url('js/json2.js') }}"></script>
    {% for j in js %}
    <script src="{{ twiggy_theme_url('js/' ~ j) }}"></script>
    {% endfor %}
    <script src="{{ twiggy_theme_url('js/script.js') }}"></script>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

  </head>

  <body>
    {{ bootstrap_menus(active|default('home'), projects|default([]), active_project) }}
    <div class="container">
	{% if success is defined and success is not empty %}
		<div class='row'>
			<div class='span12'>
				<br />
		{% if success[0] is defined %}
			{% for key, value in success %}
				<div class="alert alert-success" style='margin-bottom: 0px'>
					<button type="button" class="close" data-dismiss="alert">&times;</button>
	    			{{ value }}
	    		</div>
	   		{% endfor %}
	    {% else %}
				<div class="alert alert-success" style='margin-bottom: 0px'>
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					{{ success }}
				</div>
		{% endif %}
			</div>
	    </div>
	{% endif %}
	{% if errors is defined and errors is not empty %}
		<div class='row'>
			<div class='span12'>
				<br />
		{% if errors[0] is defined %}
			{% for key, value in errors %}
				<div class="alert alert-error" style='margin-bottom: 0px'>
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					{{ value }}
				</div>
			{% endfor %}
		{% else %}
				<div class="alert alert-error" style='margin-bottom: 0px'>
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					{{ errors }}
				</div>
		{% endif %}
			</div>
		</div>
	{% endif %}
	{% if warning is defined and warning is not empty %}
		<div class='row'>
			<div class='span12'>
				<br />
		{% if warning[0] is defined %}
			{% for key, value in warning %}
				<div class="alert" style='margin-bottom: 0px'>
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					{{ value }}
				</div>
			{% endfor %}
	    {% else %}
				<div class="alert" style='margin-bottom: 0px'>
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					{{ warning }}
				</div>
		{% endif %}
			</div>
		</div>
	{% endif %}
	</div>
    <div class="container">

      <!-- Example row of columns -->
      <div class="row">
      	<div class="span12">
      	  {# display messages #}
		  {{ bootstrap_messages(array_merge(message|default([]))) }}

		  {% block content %}
      	  {% endblock content %}
		</div>
	  </div>

      <hr>

      <footer class='text-right'>
        <p>Page rendered in <strong>{{ elapsed_time }}</strong> seconds <a href="http://www.nestor-qa.org">Nestor ver. {{ nestor_version() }}</a></p>
      </footer>

    </div> <!-- /container -->

  </body>
</html>
